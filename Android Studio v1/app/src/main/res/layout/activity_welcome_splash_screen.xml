<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgboxlogo"
            android:layout_width="wrap_content"
            android:layout_height="328dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="43dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/skyactivlogo" />

        <TextView
            android:id="@+id/lblpt"
            android:layout_width="326dp"
            android:layout_height="30dp"
            android:text="PT EUROKARS MOTOR INDONESIA"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="italic"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="326dp"
            android:layout_height="30dp"
            android:text="A Project By:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="326dp"
            android:layout_height="30dp"
            android:text="Alvian Pratama"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="326dp"
            android:layout_height="30dp"
            android:text="Andreas Yogi Brata"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="326dp"
            android:layout_height="30dp"
            android:text="Christofer Kemal Horas"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="326dp"
            android:layout_height="30dp"
            android:text="Leon Agnatio"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="326dp"
            android:layout_height="30dp"
            android:text="Ryan Agung"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>



    </LinearLayout>

</LinearLayout>